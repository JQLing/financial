.fqa_page
  ul
    li
      margin-bottom 1rem
      background-color #fff
      .head
        display flex
        align-items center
        padding 1.5rem 1.5rem
        .title
          flex 1
          color #333
          font-size 1.6rem
        .icon
          height 1.7rem
          width 1.5rem 
      .body
        margin 0 1.5rem
        .question
          font-size 1.3rem
          color #3393FF
          padding-top 1rem
        .answer
          font-size 1.3rem
          color #333
          padding-top 0.5rem
          padding-bottom 1.2rem
          ul
            li.table
              display flex
              margin-bottom 0
              div
                flex 1
                text-align center
                height 3.5rem
                line-height 3.5rem
                border 2px solid #d3d3d3
                margin-top -2px
                margin-left -2px
              div:first-child
                flex 2.4
                margin-left 0
              div:nth-child(2)
                flex 1.2
          .table
            margin-bottom 1rem
          .footer
            margin-top 1rem     
      .body:nth-child(2)
        padding-top 0.5rem
        border-top 1px dashed #D0D0D0
      .body:last-child
        padding-bottom 1rem
  .hidden
    display none
  .help
    padding 0 2rem
    height 1.5rem
    display flex
    .blank
      flex 1
    .text
      color #666
      width 19rem
      overflow hidden
    .icon
      margin-right 1rem
      margin-top 0.15rem
      width 1.2rem
      height 1.2rem