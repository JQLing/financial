  .header
    background -webkit-linear-gradient(left top, #526edc, #3451c2)
    color #fff
    height 14rem
    text-align center
    padding-top: 2.5rem;
    .tel
      font-size 1.6rem
      margin-top 0.6rem
    .img
      position relative
      display inline-block
      .head
        width 8.5rem
        height 8.5rem
        border 5px solid rgba(255, 255, 255, 5%)
        border-radius 50%
      .vip
        position absolute
        width 2.2rem
        height 2.2rem
        left 50%
        margin-left 1.8rem
        bottom 0
        z-index 2
  .body
    ul
      margin-top 0.95rem
      padding 0 0 0 1.5rem
      background-color #fff
      li
        display flex
        align-items center
        height 4.5rem
        padding-right 1.5rem
        .title
          flex 1
          color #333
          font-size 1.5rem
        .note
          padding-right 0.5rem
      li:not(:last-child)
        border-bottom 1px solid #eaeaea
  .exit
    display block
    margin 4rem 1.5rem 2rem 1.45rem
    height 4rem
    line-height 4rem
    font-size 1.6rem
    text-align center
    background-color #D54C4C
    color #fff
    border-radius 0.5rem
  .mainBg
    position fixed
    left 0
    top 0
    width 100%
    height 100%
    background #000
    opacity 0
    z-index 10000
