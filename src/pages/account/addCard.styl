.addCard_page
  padding-bottom 2rem
  ul
    padding 0 1.5rem
    background-color #fff
    font-size: 1.4rem
    margin-bottom 1.4rem
    // li.arrow
    //   background url('~assets/img/icon_more.png') right center no-repeat
    //   background-size: 7px 13px 
    li
      background-color #fff
      border-bottom 1px solid #eaeaea
      display flex
      align-items center
      color #4b4b4b
      height 5rem
      img
        width: 45px;
        height: 45px;
        padding-right: 20px;
      .title
        color #4b4b4b
        width 60px
        font-weight 400
        font-size 1.4rem
      .text 
        padding: 1.3rem 1rem 1.3rem 0.5rem;
      .clear
        display flex
        align-items center
        background-color #fff
        margin-bottom 1px
        .icon
          height 2rem
          width 2rem
        .phone
          margin-right 1rem
      input
        width 100%
        box-sizing border-box
        border none
        outline none
        flex 1
        padding 1.3rem 1rem 1.3rem 0.5rem
        box-sizing border-box
        color #4b4b4b
    li:last-child
      border-bottom none
  .btns
    font-size: 1.4rem
    margin 8rem 1.5rem 5rem
    .btn
      display flex
      -webkit-box-align center
      -webkit-align-items center
      align-items center
      -webkit-justify-content center
      width 100%
      height 4.5rem
      line-height 4.5rem
      font-size 1.6rem
      border 0
      border-radius 0.5rem
      background-color #F5A623
    .btn-primary
      background-color #526EDC
      color #fff
    .btn--disable
      background-color #adadad