.addCard_page
  padding-bottom 2rem
  .msglist
    position fixed
    left 0
    top 0
    width 100%
    height 3rem
    background #d54c4c
    font-size 1.3rem
    color #fff
    text-align center
    line-height 3rem
    z-index -2
  .fadeIn
    z-index 2
    animation fadeIn 0.5s linear
  .fadeOut
    opacity 0
    animation fadeOut 0.5s linear
  @keyframes fadeIn
    0%
      opacity 0
    50%
      opacity 0.45
    100%
      opacity 0.9
  @keyframes fadeOut
    0%
      opacity 0.9
    50%
      opacity 0.45
    100%
      opacity 0
      z-index 0
  ul
    padding 0 1.5rem
    background-color #fff
    font-size: 1.4rem
    margin-bottom 1.4rem
    // li.arrow
    //   background url('~assets/img/icon_more.png') right center no-repeat
    //   background-size: 7px 13px 
    li
      background-color #fff
      border-bottom 1px solid #eaeaea
      display flex
      align-items center
      color #4b4b4b
      height 5rem
      img
        width: 45px;
        height: 45px;
        padding-right: 20px;
      .title
        color #4b4b4b
        width 60px
        font-weight 400
        font-size 1.4rem
      .text 
        padding: 1.3rem 1rem 1.3rem 0.5rem;
      .clear
        display flex
        align-items center
        background-color #fff
        margin-bottom 1px
        .icon
          height 2rem
          width 2rem
        .phone
          margin-right 1rem
      input
        width 100%
        box-sizing border-box
        border none
        outline none
        flex 1
        padding 1.3rem 1rem 1.3rem 0.5rem
        box-sizing border-box
        color #4b4b4b
    li:last-child
      border-bottom none
  .btns
    font-size: 1.4rem
    margin 8rem 1.5rem 5rem
    .btn
      display flex
      -webkit-box-align center
      -webkit-align-items center
      align-items center
      -webkit-justify-content center
      width 100%
      height 4.5rem
      line-height 4.5rem
      font-size 1.6rem
      border 0
      border-radius 0.5rem
      background-color #F5A623
    .btn-primary
      background-color #526EDC
      color #fff
    .btn-disable
      background-color #adadad
  .submit-box
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    .bg
      width 100%
      height 100%
      position absolute
      top 0
      left 0
      background-color #000
      opacity 0.6
      z-index 10
    .input-box
      position absolute
      width 100%
      height 70%
      bottom 0
      left 0
      z-index 20
      background-color #f5f5f5
      @media screen and (max-width: 359px)
        height 80%
      .title
        width 100%
        height 4rem
        line-height 4rem
        text-align center
        font-size 1.4rem
        color #707070
        border-bottom 1px solid #d3d3d3
        position relative
        .icon
          display: block;
          width: 2rem;
          height: 2rem;
          position: absolute;
          left: 2rem;
          top: 1rem;
      .password-box
        padding 2rem 2rem 0 2rem
        position relative
        .password-tips
          position absolute
          top 3rem
          left 0
          text-align center
          font-size 1.5rem
          color #707070
          width 100%
        .forget
          font-size 1.2rem
          color #61B2F9
          text-align right
          margin-top 1rem
.overHidden
  overflow-y hidden